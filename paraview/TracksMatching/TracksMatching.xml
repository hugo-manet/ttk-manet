<?xml version="1.0" encoding="UTF-8"?>

<!-- TODO 11: Add widgets to the ParaView UI that control the member variables of the vtk filter -->

<!-- NOTE: Unfortunately the widget types and their properties are not well documented. -->
<!--       The best thing you can do is to look at filters that have similar widgets you require and copy their source code. -->
<!--       Good resources are: IcoSphere.xml, PersistenceDiagram.xml, and ArrayEditor.xml -->

<ServerManagerConfiguration>
    <ProxyGroup name="filters">
        <SourceProxy name="ttkTracksMatching" class="ttkTracksMatching" label="TTK TracksMatching">
           <Documentation long_help="TracksMatching Long" short_help="TracksMatching Short">
               This filter is a well documented ttk example filter that computes for each vertex of a vtkDataSet the average scalar value of itself and its neighbors.
           </Documentation>

            <!-- INPUT -->
               <InputProperty name="Input1" port_index="0" label="Tracking 1" command="SetInputConnection">
                    <ProxyGroupDomain name="groups">
                        <Group name="sources" />
                        <Group name="filters" />
                    </ProxyGroupDomain>
                    <DataTypeDomain name="input_type">
                        <DataType value="vtkUnstructuredGrid" />
                    </DataTypeDomain>
                    <Documentation>A set of tracks, typically output by TTK TrackingFromFields</Documentation>
                </InputProperty>
                <InputProperty name="Input2" port_index="1" label="Tracking 2" command="SetInputConnection">
                    <ProxyGroupDomain name="groups">
                        <Group name="sources" />
                        <Group name="filters" />
                    </ProxyGroupDomain>
                    <DataTypeDomain name="input_type">
                        <DataType value="vtkUnstructuredGrid" />
                    </DataTypeDomain>
                    <Documentation>A set of tracks, typically output by TTK TrackingFromFields</Documentation>
                </InputProperty>

                <!-- INPUT PARAMETER WIDGETS -->

                <!-- Create a UI group that contains all input parameter widgets (here only one) -->
                <DoubleVectorProperty
                  name="ZTranslation"
                  command="SetZTranslation"
                  label="Z-Translation"
                  number_of_elements="1"
                  default_values="0">
                  <Documentation>
                    Z-translation in the tracks. Set to -1 to guess (if linear).
                  </Documentation>
                  <DoubleRangeDomain name="range" min="-1" max="10" />
                </DoubleVectorProperty>
                <PropertyGroup panel_widget="Line" label="Input Options">
                  <Property name="ZTranslation" />
                </PropertyGroup>


            <!-- ALGORITHM PARAMETER WIDGETS -->

                <DoubleVectorProperty
                  name="PowerParameter"
                  command="SetPowerParameter"
                  label="Power parameter"
                  number_of_elements="1"
                  default_values="2">
                  <Documentation>
                    Power of the TWED and Wasserstein and Minkowski distances
                  </Documentation>
                  <DoubleRangeDomain name="range" min="1" max="8" />
                </DoubleVectorProperty>
                <DoubleVectorProperty
                  name="LambdaParameter"
                  command="SetLambdaParameter"
                  label="Lambda parameter"
                  number_of_elements="1"
                  default_values="1">
                  <Documentation>
                    Lambda of the TWED distances
                  </Documentation>
                  <DoubleRangeDomain name="range" min="0" max="10" />
                </DoubleVectorProperty>
                <DoubleVectorProperty
                  name="TimeNormalization"
                  command="SetTimeNormalization"
                  label="Time normalization"
                  number_of_elements="1"
                  default_values="1">
                  <Documentation>
                    Time normalization of the TWED.
                    Use timestep as a coordinate, with this coefficient
                  </Documentation>
                  <DoubleRangeDomain name="range" min="0" max="10" />
                </DoubleVectorProperty>
                <DoubleVectorProperty
                  name="GeometricalLifting"
                  command="SetGeometricalLifting"
                  label="Geometrical lifting"
                  number_of_elements="1"
                  default_values="1">
                  <Documentation>
                    Geometrical lifting of the TWED.
                  </Documentation>
                <DoubleRangeDomain name="range" min="0" max="10" />
                </DoubleVectorProperty>
                <PropertyGroup panel_widget="Line" label="Algorithm Options">
                  <Property name="PowerParameter" />
                  <Property name="LambdaParameter" />
                  <Property name="TimeNormalization" />
                  <Property name="GeometricalLifting" />
                </PropertyGroup>

            <!-- OUTPUT PARAMETER WIDGETS -->

                <!-- Create a UI group that contains all output parameter widgets (here only one) -->
                <DoubleVectorProperty
                  name="DisplayOffset"
                  command="SetDisplayOffset"
                  label="Display Offset"
                  number_of_elements="1"
                  default_values="0">
                  <Documentation>
                    Offset on Y for displaying both datasets
                  </Documentation>
                  <DoubleRangeDomain name="range" min="-10" max="10" />
                  </DoubleVectorProperty>
                <PropertyGroup panel_widget="Line" label="Output Options">
                  <Property name="DisplayOffset" />
                </PropertyGroup>

            <!-- DEBUG -->
            ${DEBUG_WIDGETS}

            <!-- MENU CATEGORY -->
                <Hints>
                    <ShowInMenu category="TTK - Time-varying Scalar Data" />
                </Hints>
        </SourceProxy>
    </ProxyGroup>
</ServerManagerConfiguration>
